<%- include('header', {title:`species`}); -%>
  <body>
    <%- include('nav'); -%>
    <div class='container col-10 bg-light border mt-4'>
      <h6 class="text-primary">Species: <small><%= locals.name%></small></h6>
      <h6 class="text-primary">Scientific name: <small><%= locals.scientific_name%></small></h6>
    <div class="btn-group">
    <% if(locals.isEditable){ %> 
      <a href="/species/<%=id%>/edit" class="btn btn-outline-secondary btn-sm">Edit</a>
    <% } %> 
     <form
          action="/species/<%=locals.id%>/delete?_method=DELETE"
          method="POST"
          class="d-inline-block "
        >
          <input
            type="submit"
            value="Delete"
            id="delete"
            class="btn btn-outline-secondary btn-sm"
           
          />
        </form>
    <a href="/species/<%=locals.id %>/prev" class="btn btn-outline-secondary btn-sm">Prev</a>
    <a href="/species/<%=locals.id %>/next" class="btn btn-outline-secondary btn-sm">Next</a>
    <a href="/species/<%=locals.id%>?fav=<%=!locals.fav %>" class="btn btn-outline-secondary btn-sm"
      <% if(locals.fav){%>
        style ="color: coral;"
      <% } %>
      ><i class="fa fa-star" aria-hidden="true"></i></a>
    </div>
    </div>
    <script
      src="https://maps.googleapis.com/maps/api/js?key=AIzaSyA55CGjZZP9Yz82YjeR32VCCYU1zeQQPhA&callback=initMap&libraries=&v=weekly"
      async
    ></script>
  </body>
</html>
